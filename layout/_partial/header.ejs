<!-- 导航栏 --> 
<nav class="navbar navbar-default navbar-fixed-top l-bg--white">
    <!-- We use the fluid option here to avoid overriding the fixed width of a normal container within the narrow content columns. -->
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#"><%= config.author %></a>
        </div>

        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">

            <% if (theme.menu.length > 0 ) { %>
                <% theme.menu.forEach(function(item){ %>
                    <% 
                        var menuName = 'menu.' + item.id
                        var link = item.link
                        var pageTitle = page.title 
                    %> 
                    <li class="<%- ( (is_home() && item === theme.menu[0]) || pageTitle === item.id) ?  'active' : '' %>">
                        <a href="<%= link %>"><%= __(menuName) %></a>
                    </li>
                <% }) %>
            <% } %>

            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
    
